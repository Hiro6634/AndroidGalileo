<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fragment_comments_msg_icon"
        android:layout_gravity="left"
        android:src="@android:drawable/stat_notify_chat" />
    
    <LinearLayout     
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"       >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:layout_gravity="bottom"
            android:inputType="text" />
	
	    <ImageButton
	        android:id="@+id/fragment_comments_addButton"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.99"
	        android:contentDescription="@string/fragment_comments_button_icon"
            android:layout_gravity="bottom"
	        android:src="@drawable/ic_action_send_now" />
    </LinearLayout>

	<ListView
	    android:id="@+id/fragment_comments_listView"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" />
</LinearLayout>
